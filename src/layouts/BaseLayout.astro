---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Personal website of Madhav M' } = Astro.props;
const siteUrl = Astro.site?.toString() ?? 'https://madhavm.com';
const canonical = new URL(Astro.url.pathname, siteUrl).toString();
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#f3efe7" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <link rel="canonical" href={canonical} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <header class="site-header">
      <nav class="site-nav">
        <a class="brand" href="/">
          <span class="brand-mark">MM</span>
          <span class="brand-name">Madhav Mathur</span>
        </a>
        <div class="nav-links">
          <a href="/">Home</a>
          <a href="/blog">Writing</a>
          <a href="/blog/agent">Agent Blog</a>
          <a href="/blog/human">Human Blog</a>
          <a href="/#contact">Contact</a>
        </div>
      </nav>
    </header>
    <main class="site-main">
      <slot />
    </main>
  </body>
</html>
