---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout
  title="Madhav Mathur | madhavm.com"
  description="Tech Lead, API Platform and Integrations at TheGuarantors."
>
  <section class="hero-top">
    <section class="hero-block">
      <p class="kicker">Madhav Mathur</p>
      <h1>Madhav Mathur.</h1>
      <h2>I build reliable software products.</h2>
      <p class="intro">
        Tech Lead for the API Platform and Integrations teams at TheGuarantors in New York.
        Writing on backend systems, platform APIs, and product execution.
      </p>
      <p class="nyc-splash">Based in New York City.</p>
      <div class="hero-actions">
        <a class="pill" href="/blog">Read writing</a>
        <a class="text-link" href="https://github.com/madhavMathur" target="_blank" rel="noreferrer">GitHub</a>
        <a class="text-link" href="https://www.linkedin.com/in/mathurmadhav/" target="_blank" rel="noreferrer">LinkedIn</a>
      </div>
    </section>

    <figure class="avatar-wrap hero-avatar" aria-label="Portrait">
      <img class="avatar" src="/images/profile.jpg" alt="Portrait of Madhav Mathur" loading="eager" decoding="async" />
    </figure>
  </section>

  <section class="proof-grid" aria-label="Where I have worked">
    <article class="proof-card">
      <a class="company-logo" href="https://www.theguarantors.com/" target="_blank" rel="noreferrer" aria-label="TheGuarantors">
        TG
      </a>
      <div>
        <p class="meta-title">
          <a class="entity-link" href="https://www.theguarantors.com/" target="_blank" rel="noreferrer">TheGuarantors</a>
        </p>
        <p class="meta-copy">Tech Lead, API Platform and Integrations.</p>
      </div>
    </article>
    <article class="proof-card">
      <a class="company-logo" href="https://www.amazon.com/" target="_blank" rel="noreferrer" aria-label="Amazon">
        AZ
      </a>
      <div>
        <p class="meta-title">
          <a class="entity-link" href="https://www.amazon.com/" target="_blank" rel="noreferrer">Amazon</a>
        </p>
        <p class="meta-copy">Software Development Engineer, Payments and chargeback systems.</p>
      </div>
    </article>
    <article class="proof-card">
      <a class="company-logo" href="https://www.bentley.com/" target="_blank" rel="noreferrer" aria-label="Bentley Systems">
        BS
      </a>
      <div>
        <p class="meta-title">
          <a class="entity-link" href="https://www.bentley.com/" target="_blank" rel="noreferrer">Bentley Systems</a>
        </p>
        <p class="meta-copy">Software Engineer, platform services and internal developer tooling.</p>
      </div>
    </article>
  </section>

  <section class="proof-grid education-grid" aria-label="Education">
    <article class="proof-card">
      <a class="company-logo" href="https://www.cornell.edu/" target="_blank" rel="noreferrer" aria-label="Cornell University">
        CU
      </a>
      <div>
        <p class="meta-title">
          <a class="entity-link" href="https://www.cornell.edu/" target="_blank" rel="noreferrer">Cornell University</a>
        </p>
        <p class="meta-copy">M.Eng. Computer Science</p>
      </div>
    </article>
    <article class="proof-card">
      <a class="company-logo" href="https://www.ucsd.edu/" target="_blank" rel="noreferrer" aria-label="UC San Diego">
        UC
      </a>
      <div>
        <p class="meta-title">
          <a class="entity-link" href="https://www.ucsd.edu/" target="_blank" rel="noreferrer">UC San Diego</a>
        </p>
        <p class="meta-copy">B.S. Computer Science, Minor in Economics</p>
      </div>
    </article>
  </section>

  <section class="meta-row">
    <div class="meta-card" id="contact">
      <p class="meta-title">Contact</p>
        <p class="meta-copy">Open to thoughtful engineering conversations.</p>
      <a id="contact-mailto" class="pill" href="mailto:madhavmathur@outlook.com?subject=Website%20inquiry%20from%20madhavm.com">Email me</a>
    </div>
  </section>
</BaseLayout>

<script>
  const contactLink = document.getElementById('contact-mailto');

  if (contactLink instanceof HTMLAnchorElement) {
    const source = window.location.href;
    const referrer = document.referrer || 'direct';
    const timezone = Intl.DateTimeFormat().resolvedOptions().timeZone || 'unknown';
    const timestamp = new Date().toISOString();

    const subject = 'Website inquiry from madhavm.com';
    const body = [
      'Hi Madhav,',
      '',
      'I found you through your website and wanted to reach out.',
      '',
      '--- Context ---',
      `Source URL: ${source}`,
      `Referrer: ${referrer}`,
      `Timezone: ${timezone}`,
      `Timestamp: ${timestamp}`,
    ].join('\\n');

    contactLink.href = `mailto:madhavmathur@outlook.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
  }
</script>
