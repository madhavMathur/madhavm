---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout
  title="Madhav Mathur | madhavm.com"
  description="Software Engineer. Writing about systems, software, and practical execution."
>
  <section class="hero-grid">
    <div class="hero-copy">
      <p class="kicker">Madhav Mathur</p>
      <h1>Software Engineer</h1>
      <p class="intro">
        I write about building software with clarity, speed, and taste.
        Expect practical notes on systems, product decisions, and execution.
      </p>
      <div class="inline-links" aria-label="Primary links">
        <a href="/blog">Read the blog</a>
        <a href="https://github.com/madhavMathur" target="_blank" rel="noreferrer">GitHub</a>
        <a href="https://www.linkedin.com/in/mathurmadhav/" target="_blank" rel="noreferrer">LinkedIn</a>
      </div>
    </div>

    <figure class="hero-portrait-wrap">
      <img
        class="hero-portrait"
        src="/images/profile.jpg"
        alt="Portrait of Madhav Mathur"
        loading="eager"
        decoding="async"
      />
    </figure>
  </section>

  <section class="split-row" aria-label="Writing and contact">
    <article class="panel">
      <p class="kicker">Writing</p>
      <h2>Latest</h2>
      <p class="panel-copy">Start here:</p>
      <p><a href="/blog/hello-world">Hello World</a></p>
    </article>

    <article class="panel" id="contact">
      <p class="kicker">Contact</p>
      <h2>Say Hello</h2>
      <p class="panel-copy">Short note, quick reply.</p>
      <a id="contact-mailto" class="cta" href="mailto:madhavmathur@outlook.com?subject=Website%20inquiry%20from%20madhavm.com">
        Email me
      </a>
    </article>
  </section>
</BaseLayout>

<script>
  const contactLink = document.getElementById('contact-mailto');

  if (contactLink instanceof HTMLAnchorElement) {
    const source = window.location.href;
    const referrer = document.referrer || 'direct';
    const timezone = Intl.DateTimeFormat().resolvedOptions().timeZone || 'unknown';
    const timestamp = new Date().toISOString();

    const subject = 'Website inquiry from madhavm.com';
    const body = [
      'Hi Madhav,',
      '',
      'I found you through your website and wanted to reach out.',
      '',
      '--- Context ---',
      `Source URL: ${source}`,
      `Referrer: ${referrer}`,
      `Timezone: ${timezone}`,
      `Timestamp: ${timestamp}`,
    ].join('\\n');

    contactLink.href = `mailto:madhavmathur@outlook.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
  }
</script>
