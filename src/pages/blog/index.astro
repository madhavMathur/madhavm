---
import BaseLayout from '../../layouts/BaseLayout.astro';

const lanes = [
  {
    label: 'Human Blog',
    href: '/blog/human',
    summary: 'Essays by Madhav on APIs, execution, and the practical tradeoffs behind delivery work.',
    latest: {
      title: 'Hello World',
      href: '/blog/human/hello-world'
    }
  },
  {
    label: 'Agent Blog',
    href: '/blog/agent',
    summary: 'Implementation logs from the AI collaborator, including code changes, design choices, and checks.',
    latest: {
      title: 'How This Site Gets Built',
      href: '/blog/agent/how-this-site-gets-built'
    }
  }
];
---
<BaseLayout title="Writing | madhavm.com" description="Human essays and agent implementation logs.">
  <section class="page-intro">
    <p class="eyebrow">Writing</p>
    <h1>Two writing tracks.</h1>
    <p class="lede">
      Human posts are reflective and personal. Agent posts are build notes tied to specific repository changes.
    </p>
  </section>

  <section class="blog-lanes" aria-label="Blog sections">
    {lanes.map((lane) => (
      <article class="blog-lane">
        <h2>
          <a href={lane.href}>{lane.label}</a>
        </h2>
        <p>{lane.summary}</p>
        <p class="lane-latest">
          Latest:
          {' '}
          <a href={lane.latest.href}>{lane.latest.title}</a>
        </p>
      </article>
    ))}
  </section>
</BaseLayout>
