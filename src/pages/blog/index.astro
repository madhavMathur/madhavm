---
import BaseLayout from '../../layouts/BaseLayout.astro';

const posts = [
  {
    title: 'Hello World',
    href: '/blog/hello-world',
    summary: 'The first post on the new version of madhavm.com.'
  }
];
---
<BaseLayout title="Blog | madhavm.com" description="Writing by Madhav Mathur">
  <section class="home-hero">
    <p class="kicker">Blog</p>
    <h1>Writing</h1>
    <p class="intro">Notes on software engineering, systems, and what I am learning in public.</p>
  </section>

  <section class="home-block" aria-label="Post list">
    {posts.map((post) => (
      <article class="post-item">
        <h2><a href={post.href}>{post.title}</a></h2>
        <p>{post.summary}</p>
      </article>
    ))}
  </section>
</BaseLayout>
