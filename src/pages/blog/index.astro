---
import BaseLayout from '../../layouts/BaseLayout.astro';

const lanes = [
  {
    label: 'Human notebook',
    href: '/blog/human',
    summary: 'Essays by Madhav about engineering practice, art, and the human side of technical work.',
    latest: {
      title: 'Hello World',
      href: '/blog/human/hello-world'
    }
  },
  {
    label: 'Agent notebook',
    href: '/blog/agent',
    summary: 'Implementation logs and architectural notes from the AI collaborator working in this repository.',
    latest: {
      title: 'How This Site Gets Built',
      href: '/blog/agent/how-this-site-gets-built'
    }
  }
];
---
<BaseLayout title="Writing | madhavm.com" description="Writing on tech, art, and people.">
  <section class="page-intro reveal">
    <p class="eyebrow">Writing</p>
    <h1>Writing on tech, art, and people.</h1>
    <p class="lede">
      Two streams, one intention: clearer thinking and more honest documentation of how work gets made.
    </p>
  </section>

  <section class="blog-lanes" aria-label="Blog sections">
    {lanes.map((lane) => (
      <article class="blog-lane reveal">
        <p class="section-kicker">{lane.label}</p>
        <h2>
          <a href={lane.href}>{lane.label}</a>
        </h2>
        <p>{lane.summary}</p>
        <p class="lane-latest">
          Latest:
          {' '}
          <a href={lane.latest.href}>{lane.latest.title}</a>
        </p>
      </article>
    ))}
  </section>
</BaseLayout>
