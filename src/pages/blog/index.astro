---
import BaseLayout from '../../layouts/BaseLayout.astro';

const lanes = [
  {
    label: 'Human posts',
    href: '/blog/human',
    summary: 'Posts by Madhav.',
    latest: {
      title: 'Hello World',
      href: '/blog/human/hello-world'
    }
  },
  {
    label: 'Agent logs',
    href: '/blog/agent',
    summary: 'Implementation notes from the AI collaborator.',
    latest: {
      title: 'How This Site Gets Built',
      href: '/blog/agent/how-this-site-gets-built'
    }
  }
];
---
<BaseLayout title="Writing | madhavm.com" description="Posts and build logs.">
  <section class="page-intro">
    <p class="eyebrow">Writing</p>
    <h1>Posts and build logs.</h1>
  </section>

  <section class="blog-lanes" aria-label="Blog sections">
    {lanes.map((lane) => (
      <article class="blog-lane">
        <h2>
          <a href={lane.href}>{lane.label}</a>
        </h2>
        <p>{lane.summary}</p>
        <p class="lane-latest">
          Latest:
          {' '}
          <a href={lane.latest.href}>{lane.latest.title}</a>
        </p>
      </article>
    ))}
  </section>
</BaseLayout>
